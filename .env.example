# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# MCP Server URL (optional, defaults to http://localhost:3000)
MCP_SERVER_URL=http://localhost:8000

# OpenAI Base URL (optional, defaults to https://api.openai.com/v1)
OPENAI_BASE_URL=https://api.openai.com/v1

# Debug mode (optional, defaults to false)
DEBUG=false

# Path to ChromaDB storage (optional, defaults to project_root/chroma_db)
# You can use relative or absolute paths
# CHROMA_DB_PATH=./chroma_db
